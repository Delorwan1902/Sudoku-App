<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#8BC34A"
        app:cardElevation="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:text="Select your difficulty" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/difficulty_textView"
                android:text="Beginner" />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleY="1.5"
                android:id="@+id/difficulty_seekBar" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:id="@+id/difficulty_confirm_btn"
                    android:text="Confirm" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:id="@+id/difficulty_cancel_btn"
                    android:text="Cancel" />
            </LinearLayout>

            <!--<Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hard" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert" />_-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>